<h2>Completed Tasks</h2>

<div class="task-list">

    {{#if tasks}}

        <ul>
            {{#each tasks}}
                <li>{{this.text}}</li>
            {{/each}}
        </ul>

        <div class="delete-done">
            <form action="/deleteDone" method="POST">
                <input class="delete-button" type="submit" value="Delete completed tasks">
            </form>
        </div>

    {{else}}

        <p>No tasks have been completed</p>

    {{/if}}

</div>

<script src="/javascripts/confirm_delete.js"></script>